extends base
block content
  .container-grey
    .forget-container
      video.bg-video_content(autoplay='', muted='', loop='')
        source(src='Avocado.mp4', type='video/mp4')
      form.forgetPassword.form-page
        h3.heading-secondary FORGET PASSWORD
        .entry
          .entry-text Email
          input(type='email' placeholder="youremail@gmail.com").email
        .entry
          .btn-parent.left
            button(type="submit" data-token=`${token}`).btn.btn-full.form-button SEND EMAIL